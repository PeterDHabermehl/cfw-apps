<xml xmlns="http://www.w3.org/1999/xhtml">
  <!-- Brickly skill level 1 toolbox -->
  <block type="text_print">
    <value name="TEXT">
      <shadow type="text">
        <field name="TEXT">Text</field>
      </shadow>
    </value>
  </block>
  <block type="output">
    <value name="value">
      <shadow type="on_off">
        <field name="state">0</field>
      </shadow>
    </value>
  </block>
  <block type="wait">
    <value name="seconds">
      <shadow type="math_number">
        <field name="NUM">1</field>
      </shadow>
    </value>
  </block>
  <block type="repeat"></block>
  <sep gap="50"></sep>
  <block type="mobile_drive">
    <value name="dist">
      <shadow type="math_number">
        <field name="NUM">25</field>
      </shadow>
    </value>
  </block>
  <block type="mobile_turn">
    <value name="angle">
      <shadow type="simple_angle">
        <field name="angle">90</field>
      </shadow>
    </value>
  </block>
</xml>
